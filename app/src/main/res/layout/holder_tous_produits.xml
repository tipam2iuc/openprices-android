<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_touslesproduits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_image"
                android:layout_width="101dp"
                android:layout_height="101dp"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/image_holder_tousProduits"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/panzani_1kg" />

            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/textview_nombreSuoermarche_holdertousproduits"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="11dp"
                android:src="@drawable/shop" />

            <TextView
                android:id="@+id/textview_nombreSuoermarche_holdertousproduits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="11dp"
                android:text="1"
                android:textColor="@color/violetFonce"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textview_nomProduit_holdertousProduits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/comic_sans_ms"
                android:gravity="center"
                android:text="Nom produit"
                android:textColor="@color/violetNoir"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textview_desc_holdertousProduits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_nomProduit_holdertousProduits"
                android:layout_alignLeft="@id/rl_image"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/comic_sans_ms"
                android:gravity="center"
                android:text="Description"
                android:textColor="@color/violetFonce"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/imageView_coeurvide_holderTousProduits"
                android:layout_width="24dp"
                android:layout_height="34dp"
                android:layout_below="@id/textview_desc_holdertousProduits"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-1dp"
                android:layout_marginRight="0dp"
                android:src="@drawable/coeur_vide" />

            <Button
                android:id="@+id/btn_comparerPrix"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_below="@id/rl_image"
                android:layout_marginTop="22dp"
                android:background="@drawable/btndetails"
                android:text="comparer les prix"
                android:textColor="@android:color/background_light"
                android:layout_marginBottom="3dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>