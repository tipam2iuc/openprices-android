<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_image"
                android:layout_width="101dp"
                android:layout_height="101dp"
                android:background="@color/darkGray"
                android:layout_marginTop="5dp"
                >
                <ImageView
                    android:id="@+id/image_holder_tousProduits"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/panzani_1kg"
                    />

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="15dp"
                android:textColor="@color/violetFonce"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/textview_nomProduit_holdertousProduits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom produit"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/violetNoir"
                android:fontFamily="@font/comic_sans_ms"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/textview_desc_holdertousProduits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="15dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/violetFonce"
                android:fontFamily="@font/comic_sans_ms"
                android:gravity="center"
                android:layout_below="@id/textview_nomProduit_holdertousProduits"
                />

            <ImageView
                android:id="@+id/imageView_coeurvide_holderTousProduits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coeur_vide"
                android:layout_below="@id/textview_desc_holdertousProduits"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>