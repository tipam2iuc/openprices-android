<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:layout_marginRight="1dp"
    android:layout_marginLeft="1dp"
    android:gravity="center_horizontal|center_vertical">

    <RelativeLayout
        android:id="@+id/LPR_relativelayout_article"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        >
        <ImageView
            android:id="@+id/LPR_imageview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/saucisson_ail"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/LPRtextview_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/LPR_imageview"
            android:text="Nom du produit"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:fontFamily="@font/comic_sans_ms"
            android:textColor="@color/violetFonce"
            />

    </RelativeLayout>

</RelativeLayout>