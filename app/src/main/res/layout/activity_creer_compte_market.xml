<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.Creer_compte_userActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="322dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="10"
            android:background="@color/head"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/logo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="3"
            android:background="@color/head"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/rect_user_creer_compte"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comic_sans_ms"
                    android:gravity="center"
                    android:text="CrÃ©er un compte"
                    android:textColor="@color/violetFonce"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView_error_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/comic_sans_ms"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="10sp" />

                <EditText
                    android:id="@+id/editText_nom_prenom_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/violetFonce"
                    android:drawableLeft="@drawable/company"
                    android:ems="10"
                    android:fontFamily="@font/comic_sans_ms"
                    android:hint="Nom de l'entreprise "
                    android:inputType="textPersonName"
                    android:scrollbarSize="@android:dimen/app_icon_size"
                    android:textColor="@color/violetFonce"
                    android:textColorHint="@color/head"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/editText_email_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/violetFonce"
                    android:drawableLeft="@drawable/mail"
                    android:ems="10"
                    android:fontFamily="@font/comic_sans_ms"
                    android:hint="Adresse mail"
                    android:inputType="textEmailAddress"
                    android:scrollbarSize="@android:dimen/app_icon_size"
                    android:textColor="@color/violetFonce"
                    android:textColorHint="@color/head"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/editText_motPasse_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/violetFonce"
                    android:drawableLeft="@drawable/secure"
                    android:ems="10"
                    android:fontFamily="@font/comic_sans_ms"
                    android:hint="*****"
                    android:inputType="textPassword"
                    android:scrollbarSize="@android:dimen/app_icon_size"
                    android:textColor="@color/violetFonce"
                    android:textColorHint="@color/head"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/editText_confirmMotPasse_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/violetFonce"
                    android:drawableLeft="@drawable/secure"
                    android:ems="10"
                    android:fontFamily="@font/comic_sans_ms"
                    android:hint="*****"
                    android:inputType="textPassword"
                    android:scrollbarSize="@android:dimen/app_icon_size"
                    android:textColor="@color/violetFonce"
                    android:textColorHint="@color/head"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/checkBox_affiche_motPasse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:text="Afficher le mot de passe"
                    android:textSize="8sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView_suivant_CreerCompteMarket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp"
                android:text="Suivant"
                android:textColor="@color/violetFonce"
                android:textSize="18sp"
                android:textStyle="italic"
                app:fontFamily="@font/comic_sans_ms" />

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>