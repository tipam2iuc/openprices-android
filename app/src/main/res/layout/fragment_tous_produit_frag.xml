<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.Promotions_frag">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textview_lesplusrecommendes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Les plus recommandes"
        android:textSize="15dp"
        android:textColor="@color/violetFonce"
        android:background="@color/head"
        android:fontFamily="@font/comic_sans_ms"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/layout_plusrecommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_lesplusrecommendes"
        android:padding="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        >
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
    <TextView
        android:id="@+id/textview_promo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Les plus apprecies"
        android:textSize="15dp"
        android:textColor="@color/violetFonce"
        android:background="@color/head"
        android:fontFamily="@font/comic_sans_ms"
        android:layout_below="@id/layout_plusrecommend"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:id="@+id/layout_rech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_promo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:padding="5dp">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
    <TextView
        android:id="@+id/textview_tousProduits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tous les produits"
        android:textSize="15dp"
        android:textColor="@color/violetFonce"
        android:background="@color/head"
        android:fontFamily="@font/comic_sans_ms"
        android:layout_below="@id/layout_rech"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textview_tousProduits"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:padding="5dp">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</RelativeLayout>